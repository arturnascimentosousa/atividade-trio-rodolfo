<main class="ideas-container">
  <div class="ideas-header">
    <h1>ğŸ’¡ Ideias</h1>
    <a href="/ideia/new" class="create-idea-btn">+ Criar nova ideia</a>
  </div>

  {{#if ideias.length}}
    <div class="ideas-grid">
      {{#each ideias}}
        <div class="idea-card">
          <h2>{{this.titulo}}</h2>
          <p class="idea-desc">{{this.detalhes}}</p>
          <div class="idea-meta">
            <span class="idea-category">{{this.categoria.nome}}</span>
            <span class="idea-author">Por {{this.criador.nome}}</span>
          </div>
          <div class="idea-footer">
            <div class="vote-section">
              <button class="vote-btn {{#if this.userVoted}}voted{{/if}}" data-idea-id="{{this.id}}">
                <span class="vote-icon">ğŸ‘</span>
                <span class="vote-count">{{this.votoCount}}</span>
              </button>
            </div>
            <a href="/ideia/{{this.id}}" class="idea-btn">Ver detalhes</a>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p class="no-ideas">Nenhuma ideia cadastrada ainda ğŸ˜…</p>
  {{/if}}
</main>

<script src="/views/ideia/list-ideas/list-ideas.js"></script>
