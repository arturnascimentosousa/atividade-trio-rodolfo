<section class="edit-idea">
  <h2>Editar Ideia</h2>
  <form class="edit-form" data-idea-id="{{idea.id}}">
    <label for="titulo">Título</label>
    <input type="text" name="titulo" id="titulo" value="{{idea.titulo}}" required>

    <label for="detalhes">Detalhes</label>
    <textarea name="detalhes" id="detalhes" required>{{idea.detalhes}}</textarea>

    <label for="fk_categoria">Categoria</label>
    <select name="fk_categoria" id="fk_categoria" required>
      {{#each categorias}}
        <option value="{{this.id}}" {{#if (eq ../idea.fk_categoria this.id)}}selected{{/if}}>
          {{this.nome}}
        </option>
      {{/each}}
    </select>

    <button type="submit">Salvar Alterações</button>
  </form>
</section>

<link rel="stylesheet" href="/views/ideia/edit-ideas/edit-ideas.css">
<script src="/views/ideia/edit-ideas/edit-ideas.js" defer></script>

  <a href="/ideia/{{idea.id}}" class="back-btn">← Voltar</a>
</section>