<main class="idea-details">
  <div class="idea-card">
    <h1 class="idea-title">{{ideia.titulo}}</h1>
    <p class="idea-description">{{ideia.detalhes}}</p>

    <div class="idea-info">
      <p><strong>Categoria:</strong> {{ideia.categoria.nome}}</p>
      <p><strong>Autor:</strong> {{ideia.criador.nome}}</p>
      <p><strong>Votos:</strong> {{ideia.votoCount}}</p>
    </div>

    <div class="vote-section">
      <button class="vote-btn {{#if ideia.userVoted}}voted{{/if}}" data-idea-id="{{ideia.id}}">
        <span class="vote-icon">ğŸ‘</span>
        <span class="vote-count">{{ideia.votoCount}}</span>
      </button>
    </div>

    <div class="idea-actions">
      {{#if (eq ideia.criador.id user.id)}}
        <a href="/ideia/{{ideia.id}}/edit" class="edit-btn">âœï¸ Editar</a>
      {{/if}}
      <a href="/ideia" class="back-btn">â† Voltar</a>
    </div>
  </div>
</main>

