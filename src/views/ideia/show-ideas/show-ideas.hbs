<main class="idea-details">
  <div class="idea-card">
    <h1 class="idea-title">{{idea.title}}</h1>
    <p class="idea-description">{{idea.description}}</p>

    <div class="idea-info">
      <p><strong>Categoria:</strong> {{idea.category}}</p>
      <p><strong>Autor:</strong> {{idea.author.name}}</p>
      <p><strong>Votos:</strong> {{idea.votesCount}}</p>
    </div>

    <form action="/ideia/{{idea._id}}/vote" method="POST" class="idea-vote-form">
      <button type="submit" class="vote-btn">ğŸ‘ Votar</button>
    </form>

    <div class="idea-actions">
      {{#if (eq idea.authorId user._id)}}
        <a href="/ideia/{{idea._id}}/edit" class="edit-btn">âœï¸ Editar</a>
      {{/if}}
      <a href="/ideia" class="back-btn">â† Voltar</a>
    </div>
  </div>
</main>

