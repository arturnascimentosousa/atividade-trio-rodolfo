<main class="profile-page">
  <div class="profile-container">
    <div class="profile-header">
      <h1>Meu Perfil</h1>
    </div>

    <div class="profile-info">
      <div class="info-card">
        <h2>Informações Pessoais</h2>
        <div class="info-row">
          <strong>Nome:</strong>
          <span>{{user.nome}}</span>
        </div>
        <div class="info-row">
          <strong>Email:</strong>
          <span>{{user.email}}</span>
        </div>
      </div>

      <div class="ideas-section">
        <h2>Minhas Ideias</h2>
        {{#if userIdeas.length}}
          <ul class="ideas-list">
            {{#each userIdeas}}
              <li class="idea-item">
                <a href="/ideia/{{this.id}}" class="idea-link">
                  <h3>{{this.title}}</h3>
                  {{#if this.description}}
                    <p class="idea-description">{{this.description}}</p>
                  {{/if}}
                </a>
              </li>
            {{/each}}
          </ul>
        {{else}}
          <p class="no-ideas">Você ainda não criou nenhuma ideia.</p>
          <a href="/ideia/new" class="btn btn-primary">Criar Primeira Ideia</a>
        {{/if}}
      </div>
    </div>

    <div class="profile-actions">
      <a href="/ideia/new" class="btn btn-primary">Nova Ideia</a>
      <a href="/logout" class="btn btn-outline">Sair</a>
    </div>
  </div>
</main>

