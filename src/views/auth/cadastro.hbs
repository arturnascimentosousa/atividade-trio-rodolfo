<main class="auth-page">
  <div class="auth-box">
    <h1>Crie sua conta ğŸ’¡</h1>

    <form action="/usuario/cadastro" method="POST" class="auth-form">
      <label for="nome">Nome completo</label>
      <input 
        type="text" 
        id="nome" 
        name="nome" 
        placeholder="Seu nome" 
        required
      >

      <label for="email">E-mail</label>
      <input 
        type="email" 
        id="email" 
        name="email" 
        placeholder="seu@email.com" 
        required
      >

      <label for="senha">Senha</label>
      <input 
        type="password" 
        id="senha" 
        name="senha" 
        placeholder="Crie uma senha segura" 
        required
      >

      <button type="submit" class="auth-btn">Cadastrar</button>
  </form>
  <script src="/auth/cadastro.js"></script>
    <div class="auth-footer">
      <p>JÃ¡ tem uma conta? <a href="/login">Entrar</a></p>
    </div>
    {{#if errorMessage}}
    <div class="auth-error">
      {{errorMessage}}
    </div>
    {{/if}}
  </div>
  <script src="../protect.js"></script>

</main>
